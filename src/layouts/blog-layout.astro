---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section id="single-post" class="pb-90 inner-page-hero blog-page-section">
    <div class="container">
      <div class="row justify-content-center">
        <!-- SINGLE POST CONTENT -->
        <div class="col-xl-10">
          <div class="post-content">
            <!--  SINGLE POST TITLE -->
            <div class="single-post-title text-center">
              <!-- Title -->
              <h2 class="s-46 w-700 mb-1">
                {frontmatter.title}
              </h2>
              <!-- Post Tag -->
              {
                frontmatter.tags.map((tag) => (
                  <span class="post-tag color--black">{tag}</span>
                ))
              }
              <!-- Post Meta -->
              <div class="blog-post-meta mt-35">
                <ul class="post-meta-list ico-10">
                  <li><p class="p-md w-500">By {frontmatter.author}</p></li>
                  <li class="meta-list-divider">
                    <p>
                      <span class="flaticon-minus"></span>
                    </p>
                  </li>
                  <li><p class="w-500">Synax.AI</p></li>
                  <li class="meta-list-divider">
                    <p><span class="flaticon-minus"></span></p>
                  </li>
                  <li>
                    <p class="p-md">{frontmatter.pubDate}</p>
                  </li>
                </ul>
              </div>
            </div>
            <!-- END SINGLE POST TITLE -->

            <!-- SINGLE POST IMAGE -->
            <div class="blog-post-img py-50">
              <img
                class="img-fluid r-16"
                src={frontmatter.image.url}
                alt={frontmatter.image.alt}
              />
            </div>
          </div>
          <div class="row justify-content-center">
            <!-- SINGLE POST CONTENT -->
            <div class="col-xl-9">
              <!-- SINGLE POST TEXT -->
              <div class="single-post-txt">
                <slot />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- DIVIDER LINE -->
  <hr class="divider" />
</Layout>

<style>
  ul {
    list-style: disc !important;
  }
  /* General Layout */
  body {
    font-family: "Lato", Arial, sans-serif;
    color: #333;
    background-color: #f9f9f9;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 600 !important;
    letter-spacing: 0 !important;
    margin-bottom: 1rem !important;
    font-family: "Merriweather", serif !important;
    color: #2a5d84 !important;
    margin-top: 2rem !important;
  }

  p {
    margin-bottom: 2rem !important;
  }

  h1 {
    margin-top: 2rem;
    font-size: 2rem;
    border-bottom: 2px solid #2a5d84;
    padding-bottom: 0.5rem;
  }

  h2 {
    font-size: 1.8rem;
    margin-top: 2rem;
  }

  h3 {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    color: #1b4d69;
  }

  h4 {
    font-size: 1.2rem;
    color: #4a4a4a;
  }

  /* Links */
  a {
    color: #2a5d84;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .tags span {
    background-color: #eef6fb;
    color: #2a5d84;
    border-radius: 4px;
    padding: 0.3rem 0.8rem;
    margin: 0.2rem;
    font-size: 0.9rem;
  }
</style>
