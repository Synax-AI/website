---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QNBRGFSMC4"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-QNBRGFSMC4");
    </script>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <meta
      name="title"
      content="Shagun AI Buddy for Smarter Investments | Synax AI & Research Pvt. Ltd."
    />
    <meta
      name="description"
      content="Synax.ai offers Shagun, an AI-driven stock research and analytics tool. Analyze financial reports, compare stocks, screen investments, set alerts, and optimize your portfolio with AI. Perfect for investors at all levels."
    />
    <meta
      name="keywords"
      content="AI stock research, stock analytics tool, stock market alerts, financial report analysis, stock screening software, portfolio analysis, stock comparison tool, AI-powered investment research, best stock screener, stock research for beginners, Shagun AI"
    />

    <!-- Open Graph / Facebook Meta Tags -->
    <meta property="og:url" content="https://Synax.ai" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Shagun AI Buddy for Smarter Investments | Synax AI & Research Pvt. Ltd."
    />
    <meta
      property="og:description"
      content="Synax.ai offers Shagun, an AI-driven stock research and analytics tool. Analyze financial reports, compare stocks, screen investments, set alerts, and optimize your portfolio with AI. Perfect for investors at all levels."
    />
    <meta property="og:image" content="/images/logo/icons/Asset_21_4x.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="Synax.ai" />
    <meta property="twitter:url" content="https://Synax.ai" />
    <meta
      name="twitter:title"
      content="Shagun AI Buddy for Smarter Investments | Synax AI & Research Pvt. Ltd."
    />
    <meta
      name="twitter:description"
      content="Synax.ai offers Shagun, an AI-driven stock research and analytics tool. Analyze financial reports, compare stocks, screen investments, set alerts, and optimize your portfolio with AI. Perfect for investors at all levels."
    />
    <meta name="twitter:image" content="/images/logo/icons/Asset_21_4x.png" />

    <!-- Additional Enhancements -->
    <meta name="author" content="Synax AI & Research Pvt. Ltd." />
    <meta name="robots" content="index, follow" />

    <meta name="generator" content={Astro.generator} />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- GOOGLE FONTS -->
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- BOOTSTRAP CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FONT ICONS -->
    <link href="/css/flaticon.css" rel="stylesheet" />

    <!-- PLUGINS STYLESHEET -->
    <link href="/css/menu.css" rel="stylesheet" />
    <link
      id="effect"
      href="/css/dropdown-effects/fade-down.css"
      media="all"
      rel="stylesheet"
    />
    <link href="/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="/css/owl.theme.default.min.css" rel="stylesheet" />
    <!-- ON SCROLL ANIMATION -->
    <!-- <link href="/css/animate.css" rel="stylesheet" /> -->

    <!-- TEMPLATE CSS -->
    <link href="/css/blue-theme.css" rel="stylesheet" />

    <link rel="stylesheet" href="/css/fontawesome-6.4.0-web//css/all.css" />
    <!-- RESPONSIVE CSS -->
    <link href="/css/responsive.css" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body>
    <div id="page" class="page font--jakarta">
      <Navbar />
      <slot />
      <Footer />
    </div>
    <!-- EXTERNAL SCRIPTS
		============================================= -->
    <script is:inline src="/js/jquery-3.7.0.min.js"></script>
    <script is:inline src="/js/bootstrap.min.js"></script>
    <script is:inline src="/js/modernizr.custom.js"></script>
    <script is:inline src="/js/jquery.easing.js"></script>
    <script is:inline src="/js/jquery.appear.js"></script>
    <script is:inline src="/js/menu.js"></script>
    <script is:inline src="/js/owl.carousel.min.js"></script>
    <script is:inline src="/js/wow.js"></script>

    <!-- Custom Script -->
    <script is:inline src="/js/custom.js"></script>
  </body>
</html>
