<script>
  // Import the required modules
  import { CosmosClient } from "@azure/cosmos";
  // Wait for the DOM to be ready
  document.addEventListener("DOMContentLoaded", function () {
    // Get the form element
    const form1 = document.querySelector("#beta-form") as HTMLFormElement;
    const form2 = document.querySelector("#newsletter-form") as HTMLFormElement;
    // Get the success message element
    const successMessageElement1 = document.querySelector(
      "#request-form-success-msg1"
    ) as HTMLParagraphElement;
    const successMessageElement2 = document.querySelector(
      "#request-form-success-msg2"
    ) as HTMLParagraphElement;

    // Add a submit event listener to the form
    form1.addEventListener("submit", async function (event) {
      // Prevent the default form submission
      event.preventDefault();
      const joinBetaButton = document.querySelector(
        ".joinBetaButton1"
      ) as HTMLButtonElement;

      // Get the input values
      const emailInput = form1.querySelector(".email1") as HTMLInputElement;

      // Retrieve the values

      const email = emailInput.value;

      // Log the values

      console.log("Email:", email);

      // Create a Cosmos DB client instance
      const cosmosClient = new CosmosClient({
        endpoint: "https://synax-website-db.documents.azure.com:443/",
        key: "MTuyAMnzjnvXfpTf1AX7uQlCxkqe4bdWuK0etCYc903vuRyTGlFvVUthOmillPFRfxzd6B99LfpZACDbzvMlag==",
      });

      // Define the database and container ID
      const databaseId = "SYNAX_WEBSITE";
      const containerId = "BETA_JOIN_WAITLIST";

      // Create a database if it doesn't exist
      const { database } = await cosmosClient.databases.createIfNotExists({
        id: databaseId,
      });

      // Create a container if it doesn't exist
      const { container } = await database.containers.createIfNotExists({
        id: containerId,
      });

      // Create an item (document) in the container
      const item = {
        name: "name",
        email: email,
        reason: "reason",
      };

      const { resource: createdItem } = await container.items.create(item);

      // Log the created item
      console.log("Item created:", createdItem);

      if (createdItem.name) {
        // Show the success message
        if (successMessageElement1) {
          successMessageElement1.textContent =
            "Your request has been received. Thank you! We will reach out to you soon.";
          successMessageElement1.style.display = "block"; // Ensure visibility
        }

        // Hide the join beta button
        if (joinBetaButton) {
          joinBetaButton.disabled = true; // Disable button
          joinBetaButton.textContent = "Submitted"; // Update button text
        }

        if (emailInput) {
          emailInput.disabled = true; // Disable input field
        }
      }
    });
    // Add a submit event listener to the form
    form2.addEventListener("submit", async function (event) {
      // Prevent the default form submission
      event.preventDefault();
      const joinBetaButton = document.querySelector(
        ".joinBetaButton2"
      ) as HTMLButtonElement;

      // Get the input values
      const emailInput = form2.querySelector(".email2") as HTMLInputElement;

      // Retrieve the values

      const email = emailInput.value;

